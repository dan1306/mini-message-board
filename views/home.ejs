<%- include("./partials/header") -%>

<div class="container">
  <div class="title">
    Mini Messageboard
  </div>
  <div class="title-p">
    Welcome to Mini Messageboard
  </div>
  <div class="button">
    <button type="button" class="btn View3" name="button"
    onclick="window.location.href = '/compose'"
    >Add A New Message</button>
  </div>
  <div class=" inputss">

<%results.map((value)=>{%>
    <div class="name">
      <%=value.title%>
    </div>
    <div class=" message">
      <p><%=value.content%></p>
      <hr>
      <p class="date">Submitted On: <%=value.dateTime%></p>

    </div>
    <%})%>
  </div>
</div>
<%- include("./partials/footer") -%>
